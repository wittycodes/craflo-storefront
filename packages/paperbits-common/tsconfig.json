{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "noStrictGenericChecks": true,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowUnreachableCode": true,
    "listFiles": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir":"src",
    "incremental": true
  },
  "include" :[
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}

