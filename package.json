{
  "name": "@craflo/storefront",
  "private": true,
  "dependencies": {
    "isomorphic-unfetch": "^3.0.0",
    "isomorphic-ws": "~4.0.1",
    "envalid": "~4.2.0"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "bootstrap": "yarn install",
    "cleanup": "lerna clean --yes",
    "commit": "git-cz",
    "commitmsg": "commitlint -e",
    "postinstall": "lerna bootstrap",
    "release": "lerna publish --conventional-commits --message \"chore(npm): publish\"",
    "build:vercel": "node createHydraClientIfNecessary.js && cd packages/craflo-frontend && next build",
    "start": "yarn run create-hydra-client && cd packages/craflo-frontend && yarn run start",
    "start:dev": "yarn run create-hydra-client && cd packages/craflo-frontend && yarn run start:dev",
    "test": "jest --projects packages/* --coverage",
    "test:watch": "yarn test -- --watch --coverage false",
    "watch": "lerna run --parallel watch",
    "create-hydra-client": "node createHydraClientIfNecessary.js"
  }
}
